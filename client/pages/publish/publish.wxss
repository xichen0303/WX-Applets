.pub-container {
  height: 100%;
}

.item {
  display: flex;
  padding: 36rpx 20rpx;
  border-bottom: 1px solid #ccc;
}

.label {
  width: 180rpx;
  font-weight: 400;
  color: #999;
}

.info {
  flex: 1;
  font-weight: 100;
}

.label-sell {
  margin-left: 40rpx;
}

.radio-group {
  display: flex;
}

.radio-group label {
  display: flex;
  align-items: center;
}

.button {
  padding: 40rpx 20rpx;
}

.success {
  height: 100%;
}

.success view:first-child {
  display: flex;
  height: 200rpx;
  align-items: center;
  justify-content: center;
}

.success icon {
  margin-right: 30rpx;
}